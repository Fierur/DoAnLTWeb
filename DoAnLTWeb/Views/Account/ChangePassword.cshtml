@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: 'Roboto', Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h2 {
        font-weight: 600;
        color: #333;
    }

    form {
        background: #fff;
        padding: 25px;
        max-width: 400px;
        margin: 30px auto;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .form-control {
        border: 1px solid #ddd !important;
        width: 350px;
        max-width: 100%;
        padding: 10px;
        font-size: 14px;
        border-radius: 4px !important;
        transition: 0.25s ease-in-out;
    }

        .form-control:focus {
            border-color: #ff424e !important;
            box-shadow: 0 0 3px rgba(255, 66, 78, 0.5);
        }

    .btn-primary {
        background: #ff424e !important;
        border-color: #ff424e !important;
        font-weight: 600;
        padding: 11px;
        letter-spacing: 0.5px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #e63842 !important;
        }

    .alert-danger {
        border-radius: 4px;
        font-size: 14px;
    }

    p.text-center a {
        color: #ff424e;
        text-decoration: none;
        font-weight: 500;
    }

        p.text-center a:hover {
            text-decoration: underline;
        }

    /* RESPONSIVE */
    @@media (max-width: 768px) {
        form {
            margin: 15px;
            padding: 20px;
        }
    }
</style>
<h2 class="text-center mt-4">Đổi mật khẩu</h2>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Mật khẩu cũ</label>
        <input type="password" name="oldPassword" class="form-control" required />
    </div>

    <div class="form-group mt-2">
        <label>Mật khẩu mới</label>
        <input type="password" name="newPassword" class="form-control" required />
    </div>

    <div class="form-group mt-2">
        <label>Xác nhận mật khẩu mới</label>
        <input type="password" name="confirmPassword" class="form-control" required />
    </div>

    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-warning mt-3 w-100">Cập nhật mật khẩu</button>
}
