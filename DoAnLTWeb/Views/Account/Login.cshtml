@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-4">Đăng nhập</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required placeholder="Nhập email..." />
    </div>

    <div class="form-group mt-2">
        <label>Mật khẩu</label>
        <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu..." />
    </div>

    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary mt-3 w-100">Đăng nhập</button>
}

<p class="mt-3 text-center">
    Chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Register", "Account")
</p>
