@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
body {
    font-family: 'Roboto', Arial, sans-serif;
    background-color: #f5f5f5;
}

h2 {
    font-weight: 600;
    color: #333;
}

form {
    background: #fff;
    padding: 25px;
    max-width: 400px;
    margin: 30px auto;
    border-radius: 6px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.08);
}

    .form-control {
        border: 1px solid #ddd !important;
        width: 350px;
        max-width: 100%;
        padding: 10px;
        font-size: 14px;
        border-radius: 4px !important;
        transition: 0.25s ease-in-out;
    }

.form-control:focus {
    border-color: #ff424e !important;
    box-shadow: 0 0 3px rgba(255, 66, 78, 0.5);
}

.btn-primary {
    background: #ff424e !important;  
    border-color: #ff424e !important;
    font-weight: 600;
    padding: 11px;
    letter-spacing: 0.5px;
    transition: 0.3s;
}

.btn-primary:hover {
    background: #e63842 !important;
}

.alert-danger {
    border-radius: 4px;
    font-size: 14px;
}

p.text-center a {
    color: #ff424e;
    text-decoration: none;
    font-weight: 500;
}

p.text-center a:hover {
    text-decoration: underline;
}

/* RESPONSIVE */
@@media (max-width: 768px) {
    form {
        margin: 15px;
        padding: 20px;
    }
}
</style>
<h2 class="text-center mt-4">Đăng nhập</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required placeholder="Nhập email..." />
    </div>

    <div class="form-group mt-2">
        <label>Mật khẩu</label>
        <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu..." />
    </div>

    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }

    <button type="submit" class="btn btn-primary mt-3 w-100">Đăng nhập</button>
}

<p class="mt-3 text-center">
    Chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Register", "Account")
</p>
