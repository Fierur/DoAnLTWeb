@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var khachHang = ViewBag.KhachHang;
    var chiTietGH = ViewBag.ChiTietGH as List<DoAnLTWeb.Models.ChiTietGH>;
    double tongTien = ViewBag.TongTienSanPham ?? 0;
}
<style>
    body {
        font-family: 'Roboto', Arial, sans-serif;
        background-color: #f5f5f5;
    }

    h2, h4, h5 {
        font-weight: 600;
        color: #333;
    }

    label {
        font-weight: 500;
    }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #eee;
        font-size: 15px;
        padding: 12px 16px;
    }


    .col-md-4 {
        position: sticky;
        top: 20px;
        align-self: flex-start;
    }

    .form-control {
        border: 1px solid #ddd !important;
        padding: 10px;
        font-size: 14px;
        border-radius: 4px !important;
        transition: 0.25s ease-in-out;
    }

        .form-control:focus {
            border-color: #ff424e !important;
            box-shadow: 0 0 3px rgba(255, 66, 78, 0.5);
        }

    .btn-success {
        background: #ff424e !important;
        border-color: #ff424e !important;
        font-weight: 600;
        padding: 12px;
        letter-spacing: 0.5px;
        transition: 0.3s;
    }

        .btn-success:hover {
            background: #e63842 !important;
        }

    .col-md-8 {
        background: white;
        padding: 25px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        margin: auto;
    }

    hr {
        border: none;
        border-top: 1px dashed #ddd;
    }

    #nhapDiaChiMoi {
        margin-top: 15px;
    }

        #nhapDiaChiMoi .form-group label {
            font-weight: 500;
            margin-bottom: 4px;
        }

        #nhapDiaChiMoi .form-control {
            height: 45px;
        }

    textarea.form-control {
        height: 100px !important;
        resize: none;
    }
    /*RESPONSIVE*/
    @@media (max-width: 768px) {
        .col-md-8, .col-md-4 {
            margin-top: 20px;
        }
    }
</style>
<h2 class="mt-4 text-center">Thanh toán</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (ViewBag.InfoMessage != null)
{
    <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
        <i class="fas fa-info-circle"></i> @ViewBag.InfoMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<div class="row mt-4">
    <div class="col-md-8">
        <h4>Địa chỉ giao hàng</h4>
        <form method="post" action="@Url.Action("PlaceOrder", "Order")">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Chọn địa chỉ có sẵn:</label>
                @if (ViewBag.DiaChiList != null && ((List<DoAnLTWeb.Models.DiaChiGiaoHang>)ViewBag.DiaChiList).Any())
                {
                    <select name="diaChiCoSanId" class="form-control">
                        <option value="">-- Nhập địa chỉ mới bên dưới --</option>
                        @foreach (var dc in ViewBag.DiaChiList as List<DoAnLTWeb.Models.DiaChiGiaoHang>)
                        {
                            <option value="@dc.MaDCGH">@dc.HoTenNN - @dc.SoNha</option>
                        }
                    </select>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        Bạn chưa có địa chỉ giao hàng. Vui lòng nhập địa chỉ mới bên dưới.
                    </div>
                    <input type="hidden" name="diaChiCoSanId" value="" />
                }
            </div>

            <div id="nhapDiaChiMoi">
                <hr />
                <h5>Hoặc nhập địa chỉ mới</h5>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên người nhận</label>
                            <input type="text" name="hoTenNN" class="form-control" placeholder="Nhập họ tên" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số nhà / Đường</label>
                            <input type="text" name="soNha" class="form-control" placeholder="Số nhà, đường..." />
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <label>Thành phố</label>
                        @Html.DropDownList("maTP", ViewBag.ThanhPhoList as SelectList, "-- Chọn --", new { @class = "form-control", id = "ddlTP" })
                    </div>
                    <div class="col-md-6">
                        <label>Quận huyện</label>
                        <select id="ddlQH" class="form-control"></select>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <label>Xã phường</label>
                        <select name="maXP" id="ddlXP" class="form-control"></select>
                    </div>
                    <div class="col-md-6">
                        <label>Ghi chú</label>
                        <textarea name="ghiChu" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group mt-2">
                <label>Hình thức thanh toán</label>
                @Html.DropDownList("maHTTT", ViewBag.HinhThucThanhToanList as SelectList, "-- Chọn hình thức --", new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success mt-3 w-100">Đặt hàng</button>
        </form>
    </div>

    <div class="col-md-4">
        <h4>Đơn hàng của bạn</h4>
        <ul class="list-group">
            @foreach (var item in chiTietGH)
            {
                var sach = item.Sach;
                <li class="list-group-item d-flex justify-content-between">
                    <span>@sach.TenSach (x@(item.SoLuongSachCTGH))</span>
                    <span>@String.Format("{0:N0} đ", sach.Gia * item.SoLuongSachCTGH)</span>
                </li>
            }
        </ul>
        <div class="mt-3 text-end">
            <strong>Tổng cộng: @String.Format("{0:N0} đ", tongTien)</strong>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Ẩn/hiện phần nhập địa chỉ mới khi chọn địa chỉ có sẵn
        $("select[name='diaChiCoSanId']").change(function () {
            var value = $(this).val();
            if (value) {
                $("#nhapDiaChiMoi").hide();  // Ẩn nếu có địa chỉ sẵn
            } else {
                $("#nhapDiaChiMoi").show();  // Hiện nếu bỏ chọn
            }
        });

        // Kiểm tra xem có địa chỉ có sẵn không
        var hasSavedAddress = $("select[name='diaChiCoSanId'] option").length > 1;

        if (!hasSavedAddress) {
            // Nếu không có địa chỉ, bắt buộc phải nhập địa chỉ mới
            $("#nhapDiaChiMoi").show();
        } else {
            // Nếu có địa chỉ, ẩn form nhập mới ban đầu
            $("#nhapDiaChiMoi").hide();
        }
        // Kiểm tra phương thức thanh toán
        $("select[name='maHTTT']").change(function () {
            var selectedValue = $(this).val();
            // 802 là mã "Chuyển khoản ngân hàng"
            if (selectedValue == "802") {
                Swal.fire({
                    icon: 'info',
                    title: 'Thông báo',
                    html: '<p style="font-size: 16px; line-height: 1.6;">Chức năng đang được phát triển.<br>Vui lòng chọn <strong>thanh toán khi nhận hàng</strong>.</p><p style="margin-top: 15px; color: #666;">Cảm ơn quý khách đã thông cảm cho sự bất tiện này.</p>',
                    confirmButtonText: 'Đã hiểu',
                    confirmButtonColor: '#ff424e',
                    allowOutsideClick: false
                }).then((result) => {
                    // Reset về option đầu tiên
                    $(this).val("");
                });
            }
        });

        // AJAX load quận huyện và xã phường
        $("#ddlTP").change(function () {
            var maTP = $(this).val();
            $("#ddlQH").empty();
            $("#ddlXP").empty();
            if (maTP) {
                $.getJSON('/Order/GetQuanHuyen', { maTP: maTP }, function (data) {
                    $("#ddlQH").append('<option value="">-- Chọn quận huyện --</option>');
                    $.each(data, function (i, item) {
                        $("#ddlQH").append('<option value="' + item.MaQH + '">' + item.TenQH + '</option>');
                    });
                });
            }
        });
        $("#ddlQH").change(function () {
            var maQH = $(this).val();
            $("#ddlXP").empty();
            if (maQH) {
                $.getJSON('/Order/GetXaPhuong', { maQH: maQH }, function (data) {
                    $("#ddlXP").append('<option value="">-- Chọn xã phường --</option>');
                    $.each(data, function (i, item) {
                        $("#ddlXP").append('<option value="' + item.MaXP + '">' + item.TenXP + ' (+' + item.ChiPhiGHXP + ' đ)</option>');
                    });
                });
            }
        });

        // Kiểm tra trước khi submit
        $("form").submit(function (e) {
            var diaChiCoSan = $("select[name='diaChiCoSanId']").val();
            var hoTenNN = $("input[name='hoTenNN']").val().trim();
            var soNha = $("input[name='soNha']").val().trim();
            var maTP = $("#ddlTP").val();
            var maQH = $("#ddlQH").val();
            var maXP = $("#ddlXP").val();
            var httt = $("select[name='maHTTT']").val();

            // Kiểm tra hình thức thanh toán
            if (!httt) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Thiếu thông tin',
                    text: 'Vui lòng chọn hình thức thanh toán!',
                    confirmButtonColor: '#ff424e'
                });
                e.preventDefault();
                return false;
            }

            // Kiểm tra nếu chọn chuyển khoản
            if (httt == "802") {
                Swal.fire({
                    icon: 'error',
                    title: 'Không thể thanh toán',
                    text: 'Phương thức thanh toán này đang được phát triển. Vui lòng chọn thanh toán khi nhận hàng!',
                    confirmButtonColor: '#ff424e'
                });
                e.preventDefault();
                return false;
            }

            // Nếu chưa chọn địa chỉ có sẵn thì bắt buộc phải nhập địa chỉ mới đầy đủ
            if (!diaChiCoSan) {
                if (!hoTenNN || !soNha || !maTP || !maQH || !maXP) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Thiếu thông tin',
                        text: 'Vui lòng nhập đầy đủ thông tin địa chỉ giao hàng!',
                        confirmButtonColor: '#ff424e'
                    });
                    e.preventDefault();
                    return false;
                }
            }

            // Hiển thị loading khi submit
            Swal.fire({
                title: 'Đang xử lý...',
                html: 'Vui lòng chờ trong giây lát',
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Nếu qua được hết, form mới được submit
            return true;
        });
    </script>
}
